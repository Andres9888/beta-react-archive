{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": ["react"],
    "parser": "babel-eslint",
    "rules": {
        "array-callback-return": 2,
        "complexity": [2, 5],
        "eqeqeq": 2,
        "max-statements": [2, 7],
        "max-statements-per-line": [
            2,
            {
                "max": 1
            }
        ],
        "max-nested-callbacks": [2, 2],
        "max-depth": [
            2,
            {
                "max": 2
            }
        ],
        "max-lines": [2, 90],
        "no-eval": 2,
        "no-return-assign": 2,
        "no-param-reassign": 2,
        "no-var": 2,
        "prefer-const": 2
    }
}
